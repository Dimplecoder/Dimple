const express = require('express');
const app = express();
const PORT = 3000;

// Set view engine to EJS
app.set('view engine', 'ejs');
app.set('views', './views');

// Route for homepage
app.get('/', (req, res) => {
  res.render('index',{title,' welcome to my ejs page'}; // loads views/index.ejs
});

app.listen(PORT, () => {
  console.log(`Server is running at http://localhost:${PORT}`);
});
